# $Id: PKGBUILD 284470 2016-12-22 23:27:46Z anatolik $
# Maintainer: judd <jvinet@zeroflux.org>

pkgname=alsa-lib-doc
pkgver=1.1.3
pkgrel=1
pkgdesc="An alternative implementation of Linux sound support"
arch=('i686' 'x86_64')
url="http://www.alsa-project.org"
depends=('doxygen')
optdepends=('python2: for python smixer plugin')
makedepends=('python2')
license=('GPL')
source=(ftp://ftp.alsa-project.org/pub/lib/alsa-lib-$pkgver.tar.bz2)
sha1sums=('8ef0b9725296ac8f24e06f20196f5b2b62ab27a9')

build() {
  cd "$srcdir/alsa-lib-$pkgver"
  ./configure --prefix=/usr --with-pythonlibs="-lpthread -lm -ldl -lpython2.7" --with-pythonincludes=-I/usr/include/python2.7
  make doc
}

package() {
    install -dm755 "$pkgdir/usr/share/doc/alsa-lib"
    cd "$srcdir/alsa-lib-$pkgver/doc/doxygen"
    cp -r html/* "$pkgdir/usr/share/doc/alsa-lib/"
}
